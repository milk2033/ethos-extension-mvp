{
    "manifest_version": 2,
    "name": "Ethos MVP Reputation Checker",
    "version": "0.1.2",
    "description": "Displays Ethos reputation scores next to @usernames on X.com replies",
    "permissions": [
        "https://api.ethos.network/*"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.x.com/*"
            ],
            "js": [
                "contentScript.js"
            ]
        }
    ],
    "applications": {
        "gecko": {
            "id": "ethos-mvp@example.com",
            "strict_min_version": "109.0"
        }
    }
}